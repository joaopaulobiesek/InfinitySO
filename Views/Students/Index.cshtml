@model StudentFormViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 mr-auto ml-auto">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="card-body ">

                <!--Start-->
                <p>
                    <a asp-action="Create" class="btn btn-outline-primary btn-lg">Create New</a>
                </p>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Student.EAD)</th>
                                <th>Período</th>
                                <th>@Html.DisplayNameFor(model => model.Student.MainBoard.CPF)</th>
                                <th>@Html.DisplayNameFor(model => model.Student.MainBoard.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Student.Period.Course)</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Student.EAD)</th>
                                <th>Período</th>
                                <th>@Html.DisplayNameFor(model => model.Student.MainBoard.CPF)</th>
                                <th>@Html.DisplayNameFor(model => model.Student.MainBoard.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Student.Period.Course)</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.Students)
                            {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EAD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumberPeriod)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MainBoard.CPF)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MainBoard.Name)
                                    @Html.DisplayFor(modelItem => item.MainBoard.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Period.Course.Name)
                                    @Html.DisplayFor(modelItem => item.Period.Semester.Name)
                                </td>
                                <td class="text-right">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-success btn-just-icon edit"><i class="material-icons">edit</i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link btn-warning btn-just-icon details"><i class="material-icons">dvr</i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link btn-danger btn-just-icon remove" style="pointer-events: none;"><i class="material-icons">close</i></a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!--End-->
            </div>
        </div>
    </div>
</div>