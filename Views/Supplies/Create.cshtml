@model Supply
@{
    ViewData["Title"] = "Create New Supply";
}
<div class="row">
    <div class="col-md-12 mr-auto ml-auto">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="card-body ">
                <!--Start-->
                <form asp-action="Register">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="text-danger">@ViewData["Result"]</div>
                    <div class="col-lg-5 col-md-6 col-sm-3">
                        <select asp-for="ProductCategory" asp-items="@ProductCategory.Electronic.ToSelectList()" class="selectpicker" data-size="7" data-style="btn btn-primary btn-round" title="Product Category">
                            <option selected value="">Product Category</option>
                        </select>
                        <span asp-validation-for="ProductCategory" class="text-danger"></span>
                    </div><br />
                    <div class="col-lg-5 col-md-6 col-sm-3">
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="ValueMeasure"></label>
                                <input asp-for="ValueMeasure" class="form-control" />
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <select asp-for="MeasureType" asp-items="@MeasureType.unity.ToSelectList()" class="custom-select" data-size="7" data-style="btn btn-primary btn-round" title="Measure Type">
                                        <option selected value="">Measure Type</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="form-group">
                            <label asp-for="MinimumOrderQuantity"></label>
                            <input asp-for="MinimumOrderQuantity" class="form-control" />
                            <span asp-validation-for="MinimumOrderQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input asp-for="ActiveSupply" class="form-check-input">
                            <span class="form-check-sign">
                                <span class="check"></span>
                            </span>
                            Ativar Produto
                        </label>
                    </div>
                    <div class="form-group">
                        <hr />
                        <input type="submit" value="Create" class="btn btn-info" />
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary" data-dismiss="modal">Back to List</a>
                    </div>
                </form>
                <!--End-->
            </div>
        </div>
    </div>
</div>