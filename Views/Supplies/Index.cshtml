@model Supply
@{
    ViewData["Title"] = "Suprimento";
}

<div class="row">
    <div class="col-md-12 mr-auto ml-auto">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="card-body ">

                <!--Start-->
                <p>
                    <a asp-action="Create" class="btn btn-outline-primary btn-lg">Create New</a>
                </p>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-right">
                                    <a asp-action="Edit" class="btn btn-link btn-success btn-just-icon edit"><i class="material-icons">edit</i></a>
                                    <a asp-action="Details"  class="btn btn-link btn-warning btn-just-icon details"><i class="material-icons">dvr</i></a>
                                    <a asp-action="Delete"  class="btn btn-link btn-danger btn-just-icon remove" style="pointer-events: none;"><i class="material-icons">close</i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!--End-->
            </div>
        </div>
    </div>
</div>