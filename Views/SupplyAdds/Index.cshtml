@model SupplyAdd
@{
    ViewData["Title"] = "Suprimento";
}

<div class="row">
    <div class="col-md-12 mr-auto ml-auto">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="card-body ">

                <!--Start-->
                <p>
                    <a asp-action="Create" class="btn btn-outline-primary btn-lg">Adicionar +</a>
                </p>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Supply.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Employee.MainBoard.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.QuantityAdded)</th>
                                <th>@Html.DisplayNameFor(model => model.InvoiceNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.AddDate)</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Supply.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Employee.MainBoard.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.QuantityAdded)</th>
                                <th>@Html.DisplayNameFor(model => model.InvoiceNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.AddDate)</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.SupplyAdds)
                            {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Supply.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.MainBoard.Name)
                                    @Html.DisplayFor(modelItem => item.Employee.MainBoard.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuantityAdded)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddDate)
                                </td>
                                <td class="text-right">
                                    <a asp-controller="SupplyAdds" asp-action="Index" asp-route-id="@item.Id" class="btn btn-link btn-success btn-just-icon edit"><i class="material-icons">add_circle</i></a>
                                    <a asp-controller="SupplyWithdrawals" asp-action="Index" asp-route-id="@item.Id" class="btn btn-link btn-danger btn-just-icon edit"><i class="material-icons">remove_circle</i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-success btn-just-icon edit"><i class="material-icons">edit</i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!--End-->
            </div>
        </div>
    </div>
</div>