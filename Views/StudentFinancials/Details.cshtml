@model StudentFinancialFormViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-md-12 mr-auto ml-auto">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="card-body ">

                <!--Start-->
                <h6>@Html.DisplayNameFor(model => model.StudentFinancial.Student.MainBoard.Name)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.StudentFinancial.Student.MainBoard.Name) @Html.DisplayFor(model => model.StudentFinancial.Student.MainBoard.LastName)</p>

                <h6> @Html.DisplayNameFor(model => model.StudentFinancial.Student.EAD)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.StudentFinancial.Student.EAD)</p>

                <h6>@Html.DisplayNameFor(model => model.StudentFinancial.Student.MainBoard.CPF)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.StudentFinancial.Student.MainBoard.CPF)</p>

                <h6>@Html.DisplayNameFor(model => model.StudentFinancial.DateNegotiation)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.StudentFinancial.DateNegotiation)</p>

                <h6>@Html.DisplayNameFor(model => model.StudentFinancial.Student.MainBoard.Cell)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.StudentFinancial.Student.MainBoard.Cell)</p>

                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <tbody>
                            @for (int i = 0; i < Model.BilletValues.Count; i++)
                            {
                                @if (Model.StudentFinancial.Id == Model.BilletValues[i].StudentFinancialId)
                                {
                                    <tr>
                                        <td>
                                            <label asp-for="@Model.BilletValues[i].DateDue" class="form-check-label"></label>
                                            <input asp-for="@Model.BilletValues[i].DateDue" class="form-control" disabled />
                                        </td>
                                        <td>
                                            <label asp-for="@Model.BilletValues[i].ValueBillet"></label>
                                            <input asp-for="@Model.BilletValues[i].ValueBillet" disabled class="form-control" />
                                        </td>
                                        <td>
                                            <select disabled asp-for="@Model.BilletValues[i].BilletPay" asp-items="@BilletPay.NotPaid.ToSelectList()" class="selectpicker" data-size="7" data-style="btn btn-primary btn-round"></select>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <a asp-action="Edit" asp-route-id="@Model.StudentFinancial.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary" data-dismiss="modal">Back to list</a>
                </div>
                <!--End-->

            </div>
        </div>
    </div>
</div>