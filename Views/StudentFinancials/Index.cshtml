@model StudentFinancialFormViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 mr-auto ml-auto">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="card-body ">

                <!--Start-->
                <form class="navbar navbar-expand-lg navbar-transparent bg-primary col-lg-2" asp-action="SimpleSearch">
                    <p>
                        <a asp-action="Register" class="btn btn-outline-primary btn-lg">Create New</a>
                    </p>
                    <div class="form-group">
                        <label for="minDate" class="col-form-label col-lg-6">Min Date</label><br />
                        <div class="input-group-prepend col-md-10">
                            <i class="material-icons">av_timer</i>
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="minDate" class="col-form-label col-lg-6">Max Date</label><br />
                        <div class="input-group-prepend col-md-10">
                            <i class="material-icons">av_timer</i>
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group text-center ">
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-info">Search</button>
                        </div>
                    </div>
                </form>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>EAD</th>
                                <th>CPF</th>
                                <th>Data Negotiation</th>
                                <th>Day Due Billet</th>
                                <th>Financial Negotiation</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>EAD</th>
                                <th>CPF</th>
                                <th>DataNegotiation</th>
                                <th>DayDueBillet</th>
                                <th>FinancialNegotiation</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.StudentFinancials)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.MainBoard.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.EAD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.MainBoard.CPF)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateNegotiation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateDueBillet)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentFinancialNegotiation)
                                    </td>
                                    <td class="text-right">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-success btn-just-icon edit"><i class="material-icons">edit</i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link btn-warning btn-just-icon details"><i class="material-icons">dvr</i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link btn-danger btn-just-icon remove" style="pointer-events: none;"><i class="material-icons">close</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!--End-->
            </div>
        </div>
    </div>
</div>