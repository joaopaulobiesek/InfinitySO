@model CertificateFormViewModel
@{
    ViewData["Title"] = "Certificados";
}

<div class="row">
    <div class="col-md-12 mr-auto ml-auto">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="card-body ">

                <!--Start-->
                <p>
                    <a asp-action="Register" class="btn btn-outline-primary btn-lg">Create New</a>
                </p><br />
                <h6> @Html.DisplayNameFor(model => model.CertificateCourse.NameCourse)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.CertificateCourse.NameCourse)</p>
                <h6> @Html.DisplayNameFor(model => model.CertificateCourse.NameSignature)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.CertificateCourse.NameSignature)</p>
                <h6> @Html.DisplayNameFor(model => model.CertificateCourse.Amount)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.CertificateCourse.Amount)</p>
                <h6> @Html.DisplayNameFor(model => model.CertificateCourse.Hour)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.CertificateCourse.Hour)h.</p>
                <h6> @Html.DisplayNameFor(model => model.CertificateCourse.InitialDate)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.CertificateCourse.InitialDate)</p>
                <h6> @Html.DisplayNameFor(model => model.CertificateCourse.FinalDate)</h6>
                <p class="text-secondary">@Html.DisplayFor(model => model.CertificateCourse.FinalDate)</p>

                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Certificate.MainBoard.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Certificate.MainBoard.CPF)</th>
                                <th>@Html.DisplayNameFor(model => model.Certificate.Approved)</th>
                                <th>@Html.DisplayNameFor(model => model.Certificate.Pay)</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Certificate.MainBoard.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Certificate.MainBoard.CPF)</th>
                                <th>@Html.DisplayNameFor(model => model.Certificate.Approved)</th>
                                <th>@Html.DisplayNameFor(model => model.Certificate.Pay)</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.Certificates)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MainBoard.Name)
                                        @Html.DisplayFor(modelItem => item.MainBoard.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MainBoard.CPF)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Approved)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pay)
                                    </td>
                                    <td class="text-right">
                                        @if (item.Approved == true && item.Pay == true)
                                        {
                                            <a asp-action="Send" asp-route-id="@item.Id" class="btn btn-link btn-warning btn-just-icon details"><i class="material-icons">dvr</i></a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-success btn-just-icon edit"><i class="material-icons">edit</i></a>
                                        }
                                        else
                                        {
                                            <i class="btn btn-link btn-warning btn-just-icon material-icons details">dvr</i>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-success btn-just-icon edit"><i class="material-icons">edit</i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!--End-->
            </div>
        </div>
    </div>
</div>