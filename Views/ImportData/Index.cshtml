@model ImportDataFormViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-10 mr-auto ml-auto">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="card-body ">
                <!--Start-->
                <p>
                    <a asp-action="SendFile" class="btn btn-outline-primary btn-lg">Send File</a>
                </p>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.NameFile)</th>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.PageNumbers)</th>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.Size)</th>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.DateUpload)</th>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.Path)</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.NameFile)</th>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.PageNumbers)</th>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.Size)</th>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.DateUpload)</th>
                                <th>@Html.DisplayNameFor(model => model.DownloadFile.Path)</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.DownloadFiles)
                            {
                                <tr>
                                    <th>@Html.DisplayFor(modelItem => item.NameFile)</th>
                                    <th>@Html.DisplayFor(modelItem => item.PageNumbers)</th>
                                    <th>@Html.DisplayFor(modelItem => item.Size)</th>
                                    <th>@Html.DisplayFor(modelItem => item.DateUpload)</th>
                                    <th>@Html.DisplayFor(modelItem => item.Path)</th>
                                    <td class="text-right">
                                        <a asp-action="Import" asp-route-id="@item.Id" class="btn btn-link btn-success btn-just-icon edit"><i class="material-icons">edit</i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!--End-->
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}